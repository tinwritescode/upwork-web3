// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model User {
  id      BigInt @id @default(autoincrement())
  address String @unique

  clientId     BigInt?  @unique
  Client       Client[]
  WorkAssigned Work[]
}

model Client {
  id BigInt @id @default(autoincrement())

  name    String
  address String

  User   User   @relation(fields: [userId], references: [id])
  userId BigInt
  Work   Work[]
}

enum PayType {
  HOURLY
  FIXED
}

enum LevelRequired {
  ENTRY
  INTERMEDIATE
  EXPERT
}

enum ProjectType {
  NEW
  ON_GOING
  MAINTAINANCE
}

enum ProjectScope {
  SMALL
  MEDIUM
  LARGE
}

enum ProjectLong {
  ONE_TO_THREE_MONTHS
  THREE_TO_SIX_MONTHS
  MORE_THAN_SIX_MONTHS
}

model Work {
  id BigInt @id @default(autoincrement())

  assignedTo BigInt
  User       User   @relation(fields: [assignedTo], references: [id])

  Client   Client @relation(fields: [clientId], references: [id])
  clientId BigInt

  // Fields
  title              String
  content            String
  payType            PayType
  levelRequired      LevelRequired
  projectType        ProjectType
  skillsAndExperties SkillsAndExperties[]
  scope              ProjectScope
  long               ProjectLong

  // Budget
  perHourBudget Int?
  fixedBudget   Int?
}

model SkillsAndExperties {
  id BigInt @id @default(autoincrement())

  Work   Work   @relation(fields: [workId], references: [id])
  workId BigInt

  subItems SkillSubItem[]

  skill String
  exp   Int
}

model SkillSubItem {
  id BigInt @id @default(autoincrement())

  // name
  name String

  SkillsAndExperties   SkillsAndExperties? @relation(fields: [skillsAndExpertiesId], references: [id])
  skillsAndExpertiesId BigInt?
}
